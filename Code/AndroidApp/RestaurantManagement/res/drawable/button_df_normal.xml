<shape
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:shape="rectangle"
	>

	<gradient
		android:startColor="#FFA02222"
		android:centerColor="#FFA02222"
		android:endColor="#FFA02222"
		android:angle="270"/>

	<stroke
		android:width="1dp"
		android:color="#CCCC66"/>

	<padding
		android:top="8dp"
		android:bottom="8dp"
		android:left="5dp"
		android:right="5dp"/>

	<corners
		android:radius="4dp"/>

</shape>
